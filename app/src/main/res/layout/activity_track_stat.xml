<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fisher.andrew.sportstats.ui.TrackStatActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayoutHeader"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Name"
                android:background="@drawable/table_cells"
                android:id="@+id/gameNameHeader"
                android:textAlignment="center" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2Pts"
                android:background="@drawable/table_cells"
                android:id="@+id/textView3"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3Pts"
                android:background="@drawable/table_cells"
                android:id="@+id/textView4"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FT"
                android:background="@drawable/table_cells"
                android:id="@+id/textView5"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REB"
                android:background="@drawable/table_cells"
                android:id="@+id/textView6"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AST"
                android:background="@drawable/table_cells"
                android:id="@+id/textView7"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STL"
                android:background="@drawable/table_cells"
                android:id="@+id/textView8"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLK"
                android:background="@drawable/table_cells"
                android:id="@+id/textView9"
                android:textAlignment="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pts."
                android:background="@drawable/table_cells"
                android:id="@+id/textView"
                android:textAlignment="center" />
        </TableRow>
    </TableLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/playerStatRecyclerView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tableLayoutHeader"/>


</RelativeLayout>
