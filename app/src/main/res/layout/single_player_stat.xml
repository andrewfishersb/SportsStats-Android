<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp">

        <TextView
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@drawable/table_cells"
            android:id="@+id/playerName"
            android:layout_weight="1"
            android:textAlignment="center" />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="2Pts"
                android:background="@drawable/table_cells"
                android:id="@+id/player2Pts"
                android:textAlignment="center"
                android:layout_weight="1"
              />

            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="3Pts"
                android:background="@drawable/table_cells"
                android:id="@+id/player3Pts"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="FT"
                android:background="@drawable/table_cells"
                android:id="@+id/playerFT"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="Pts."
                android:background="@drawable/table_cells"
                android:id="@+id/playerPoints"
                android:textAlignment="center"
                android:layout_weight="1"/>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="AST"
                android:background="@drawable/table_cells"
                android:id="@+id/playerAst"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="REB"
                android:background="@drawable/table_cells"
                android:id="@+id/playerReb"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="STL"
                android:background="@drawable/table_cells"
                android:id="@+id/playerStl"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="BLK"
                android:background="@drawable/table_cells"
                android:id="@+id/playerBLK"
                android:textAlignment="center"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_swap_horiz_black_24dp"
        android:id="@+id/subsituteButton"
        android:paddingRight="10dp"
        android:layout_alignTop="@+id/tableLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="2dp"/>
</RelativeLayout>